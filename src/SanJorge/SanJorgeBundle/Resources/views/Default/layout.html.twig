<!doctype html>
<html>
	<head>
    	<meta charset="utf-8" />
    	<title>ABM</title>
    	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />    	
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"/>
		<script language="javascript" src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
		<style>
			*{
				padding:0px;
				margin:0px;
			}

			.pagina
			{
				padding:6px;				
				color:white;
				width:50%;
				margin:auto;
			}

			.barra
			{
				background: #A0D6B4;
				margin:auto;
				text-align:center;
				font-family:verdana;
				font-size:15px;
				padding:10px;
				color:white;
			}

			.cuerpo
			{
				width:100%;
				margin:auto;
				color:white;
				margin-top:5px;
			}

			.menu
			{
				background:#009688;
				font-family:verdana;
				font-size:15px;
				padding:6px;
			}

			.menu a
			{
				color:white;
				text-decoration:none;
				cursor:pointer;
			}

			.link
			{
				color:#20B2AA;
				font-family: 'tahoma';
				font-size: 15px;
				cursor:pointer;
				text-decoration: none;
			}

			.link:hover
			{
				color:black;
			}

			thead th,td
			{
				border:1px solid black;
				padding:5px;
				background: #009688;
				text-align: center;
				color:white;
			}

			.celda td
			{
				border:1px solid black;
				padding:5px;
				background: white;
				color:black;
			}

			.celda .link
			{
				color:black;
			}	

			span
			{
				color:black;
				background: red;
				display: block;
				float:left;
			}

		</style>
	</head>
	<body>
		<div class="pagina">
			<div class="barra">
				<h3>ABM SAN JORGE</h3>
			</div>
			<div class="menu" style="padding-left:10px;">
				<a href="{{path('san_jorge_clientes',{'mode':'list','id':'0'})}}">
					{% if (app.request.attributes.get('_route')=='san_jorge_clientes') %}
						<b>Clientes</b>
					{% else %}
						Clientes
					{% endif %}
				</a>&nbsp;|
				<a href="{{path('san_jorge_facturas',{'mode':'list','id':'0'})}}">
					{% if ((app.request.attributes.get('_route')=='san_jorge_facturas')or(app.request.attributes.get('_route')=='san_jorge_items')) %}
						<b>Facturas</b>
					{% else %}
						Facturas
					{% endif %}
				</a>
			</div>	
			<div class="cuerpo">
            	{% block content %}{% endblock %}   
			</div>	
		</div>
	</body>
</html>